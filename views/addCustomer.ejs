    <div class="title row justify-content-center align-item-center w-100 py-5" style="font-size: 2rem; color: #004d80;">Add Customer</div>
        <div class="row justify-content-center align-item-center w-100">
                <form class="col-lg-6 col-md-6 col-sm-8 col-xs-12 align-item-center" action="/customers/createcustomer" method="post">
                    <div class="row">
                        <div class="col-2">
                          <label class="py-2" style="color: #004d80; font-size: 1.5rem;" for="firstName">
                            First Name:
                          </label>
                        </div>
                        <div class="col-10 ">
                          <input 
                            class="form-control py-2"
                            style="height: 50px;" placeholder="First Name" type="text" id="firstName" name="firstName" required>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-2">
                          <label class="py-2" style="color: #004d80; font-size: 1.5rem;" for="lastName">
                            Last Name:
                          </label>
                        </div>
                        <div class="col-10 ">
                          <input 
                            class="form-control py-2"
                            style="height: 50px;" placeholder="Last Name" type="text" id="lastName" name="lastName" required>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-2">
                          <label class="py-2" style="color: #004d80; font-size: 1.5rem;" for="email">
                            Email:
                          </label>
                        </div>
                        <div class="col-10 ">
                          <input 
                            class="form-control py-2"
                            style="height: 50px;" placeholder="Email" type="text" id="email" name="eamil" required>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-2">
                          <label class="py-2" style="color: #004d80; font-size: 1.5rem;" for="phoneNumber">
                            Phone Number:
                          </label>
                        </div>
                        <div class="col-10 ">
                          <input 
                            class="form-control py-2"
                            style="height: 50px;" placeholder="Phone Number" type="text" id="phoneNumber" name="phoneNumber" required>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-2">
                          <label class="py-2" style="color: #004d80; font-size: 1.5rem;" for="address">
                            Address:
                          </label>
                        </div>
                        <div class="col-10 ">
                          <input 
                            class="form-control py-2"
                            style="height: 50px;" placeholder="Addressr" type="text" id="address" name="address" required>
                        </div>
                      </div>

                     
                      <div class="row pt-3 pb-5 justify-content-center align-item-center">
                        <div class="col-6 justify-content-center align-item-center">
                            <button class="w-100 button-1" type="submit" >Add Customer</button>
                        </div>
                      </div>
                </form>
              
              
