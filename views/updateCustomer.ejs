

<!DOCTYPE html>
<html>
<head>
    <title>Update Customers</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <style>
        .thead-custom th {
            background-color: #004d80; 
            color: white;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #e6f2ff; 
        }
        .table-striped tbody tr:nth-of-type(even) {
            background-color: #ffffff; 
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-3">Available Customers</h1>
        <div class="table-responsive">
            <% if(customers.length > 0) { %>
                <table class="table table-striped">
                    <thead class="thead-custom">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% customers.forEach(car => { %>
                            <tr>
                                <td><%= customers.firstName %></td>
                                <td><%= customers.lastName %></td>
                                <td><%= customers.phoneNumber %></td>
                                <td><%= customers.address %></td>
                                <td>
                                    <button class="btn button-1" data-toggle="modal" data-target="#editCarModal" onclick="editCustomer('<%= customer.Id %>', '<%= customer.firstName %>', '<%= customer.lastName %>', '<%= customer.phoneNumber %>', '<%= customer.address %>')">Edit</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No customers available at the moment.</p>
            <% } %>
        </div>
    </div>

    <div class="modal fade" id="editCustomerModal" tabindex="-1" role="dialog" aria-labelledby="editCustomerModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCustomerModalLabel">Edit Customers</h5>
                    <button type="button" class="button-1 close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editCustomersForm">
                        <!-- Form fields for car information -->
                        <input type="hidden" id="editCustomerId">
                        <div class="form-group">
                            <label for="editCustomerFirstName">First Name</label>
                            <input type="text" class="form-control" id="editCustomerFirstName">
                        </div>
                        <div class="form-group">
                            <label for="editCustomerLastName">Last Name</label>
                            <input type="text" class="form-control" id="editCustomerLastName">
                        </div>
                        <div class="form-group">
                            <label for="editCustomerPhoneNumber">Phone Number</label>
                            <input type="text" class="form-control" id="editCustomerPhoneNumber">
                        </div>
                        <div class="form-group">
                            <label for="editCustomerAddress">Address</label>
                            <input type="text" class="form-control" id="editCustomerAddress">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" form="editCustomerForm">Save Changes</button>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

